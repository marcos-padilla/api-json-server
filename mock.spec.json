{
     "version": 1,
     "settings": {
       "delayMs": 200,
       "errorRate": 0.1,
       "errorStatus": 503,
       "errorResponse": { "error": "Service temporarily unavailable" }
     },
     "endpoints": [
       {
         "method": "GET",
         "path": "/hello",
         "status": 200,
         "response": { "message": "Hello from spec" }
       },
       {
         "method": "GET",
         "path": "/slow",
         "status": 200,
         "delayMs": 1500,
         "response": { "message": "This endpoint is intentionally slow" }
       },
       {
         "method": "GET",
         "path": "/flaky",
         "status": 200,
         "errorRate": 0.5,
         "errorStatus": 500,
         "errorResponse": { "error": "Random failure" },
         "response": { "message": "Sometimes works, sometimes fails" }
       }
     ]
   }
   